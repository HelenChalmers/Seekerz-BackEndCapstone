@model Seekerz.Models.Job

@{
    ViewData["Title"] = "Edit";
}

<h2 class="Mono">Edit Your Job</h2>

@*<h4>Job</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobId" />
            <div class="form-group">
                <label class="Mono">Position</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="Mono">Personal Notes</label>
               
                <input asp-for="PersonalNotes" class="form-control" />
                <span asp-validation-for="PersonalNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="Mono">Reported to NSS?</label> 
                <input asp-for="ToldNss" class="form-control" />
                <span asp-validation-for="ToldNss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label class="Mono">
                        <input asp-for="IsActive" /> Check If Job Is Still Active!
                        
                    </label>
                </div>
            </div>
            
            <div class="form-group">
                <label class="Mono">Company Name</label> 
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info CreateButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info BackButton">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
