@model Seekerz.Models.Job

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Your Job</h2>

@*<h4>Job</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JobId" />
            <div class="form-group">
                Position@*<label asp-for="Position" class="control-label"></label>*@
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                Personal Notes
                @*<label asp-for="PersonalNotes" class="control-label"></label>*@
                <input asp-for="PersonalNotes" class="form-control" />
                <span asp-validation-for="PersonalNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
               Reported to NSS? @*<label asp-for="ToldNss" class="control-label"></label>*@
                <input asp-for="ToldNss" class="form-control" />
                <span asp-validation-for="ToldNss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> Check If Job Is Still Active!
                        @*@Html.DisplayNameFor(model => model.IsActive)*@
                    </label>
                </div>
            </div>
            @*<div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                Company Name @*<label asp-for="CompanyId" class="control-label"></label>*@
                <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default CreateButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info BackButton">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
