@model IEnumerable<Seekerz.Models.Job>

@{
    ViewData["Title"] = "Home Page";
}

<h3>Welcome!</h3>

<h4>These Are Your Active Jobs.</h4>

<p>
    <a asp-controller="Jobs" asp-action="Create" class="btn btn-success">Create New Position</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    <a asp-controller="Jobs" asp-action="Details" asp-route-id="@item.JobId">@Html.DisplayFor(modelItem => item.Position)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
