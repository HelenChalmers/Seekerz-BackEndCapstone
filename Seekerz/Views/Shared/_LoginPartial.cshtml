@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Companies" asp-action="Index">Company</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Jobs" asp-action="ArchivedIndex">Archived Jobs</a>
            </li>
            <li>
                <a asp-area="" asp-controller="TaskToDoes" asp-action="Index">Task List</a>
            </li>
            
            <li>
                <a asp-area="" asp-controller="QAs" asp-action="Index">FAQ's</a>
            </li>
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>

    <ul>
        <form asp-controller="Jobs" asp-action="SearchResults" method="get" class="nav-search">
            <input type="text" name="search" class="input-sm" placeholder="Search for a Position"/>
        </form>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}